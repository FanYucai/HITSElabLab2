package qwq;

import com.opensymphony.xwork2.ActionContext;
import com.opensymphony.xwork2.ActionSupport;

public class DeleteBook extends ActionSupport {

	private String BookISBN;
	
	public String getBookISBN() {
		return BookISBN;
	}
	
	public void setAuthorsName(String authorsName) {
		this.authorsName = authorsName;
	}
	
	public String execute() throws Exception {
		ActionContext ctx = ActionContext.getContext();
		ctx.getSession().put("user", getAuthorsName());
		if (getAuthorsName().equals("fiona")) {
			ctx.put("tip", "您查询的图书信息如下");
			//ctx.put("authorsName", "xxxxxxx");
			ctx.put("bookISBN", "ISBN1234567");
			ctx.put("bookPrice", "$12.3");
			return SUCCESS;
		}
		ctx.put("tip", "对不起，您查询的作者不存在");
		return ERROR;
	}
}

package qwq;

import com.opensymphony.xwork2.ActionContext;
import com.opensymphony.xwork2.ActionSupport;

public class DeleteBook extends ActionSupport {

	private String BookId;
	
	public String getBookId() {
		return BookId;
	}
	
	public void setBookId(String BookId) {
		this.BookId = BookId;
	}
	
	public String execute() throws Exception {
		ActionContext ctx = ActionContext.getContext();
		ctx.getSession().put("BookId", getBookId());
//		if (getBookId().equals("fiona")) {
//			ctx.put("tip", "您查询的图书信息如下");
//			//ctx.put("BookId", "xxxxxxx");
//			ctx.put("BookId", "ISBN1234567");
//			ctx.put("bookPrice", "$12.3");
//			return SUCCESS;
//		}
		ctx.put("tip", "对不起，您查询的作者不存在");
		return ERROR;
	}
}
